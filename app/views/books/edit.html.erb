<div class="container">
  <div class="row">
  <div class="col-sm-12 col-md-10 col-lg-6 px-sm-0 mx-auto">  
    <h1>Editing Book</h1>
    
<%= form_with model: @book do |f| %>

  <div class=form-group>
    <h6>Title</h6>
    <%= f.text_field :title, class:"form-control" %>
  </div>
  
  <div class=form-group>
    <h6>Opinion</h6>
    <%= f.text_area :body, class:"form-control" %>
  </div>
  
  <div class=form-group>
    <%= f.submit 'Update Book', style: 'background-color: #32cd32; color: #fff; border: none; padding: 10px 20px; border-radius: 5px;' %>
  </div>
  
<% end %>

<%= link_to "Show", book_path(@book.id) %>
|
<%= link_to "Back", "/books" %>


</div>
</div>
</div>
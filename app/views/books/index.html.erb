<%= render 'book', book: @book %>
<div class="col-md-8 offset-md-1">
    <h2>Books</h2>
    <!--tableタグで線が出てくる予定-->
    <thead>
    <table class="table table-hover table-inverse">
   
    <tr>
        <th></th>
        <th>Title</th>
        <th>Opinion</th>
    </tr>
   
    </thead>
  <tbody>
  <% @books.each do |book| %>
  
    <tr>
        <td><%= link_to image_tag('sample-author1.jpg', class: 'user-name'), user_path(current_user) %></td>
            
        <td><%= link_to book_path(book.id) do %><%= book.title %><% end %></td>
        
        <td><%= book.body %></td>
        
    </tr>
    <% end %>
    </table>
    </tbody>
</div>